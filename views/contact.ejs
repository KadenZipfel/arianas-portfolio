<% include partials/header %>

<div class="contact">
  <div class="col-md-12">
    <div class="col-md-6 col-md-offset-3">
      <h3 class="contact__title text-center">
        For booking inquiries or any other questions 
        you may have, please don't hesitate to get in
        touch
      </h3>
      <div class="well">
        <% if(message && message.length > 0) { %>
          <div class="alert alert-success text-center" role="alert">
            <%= message %>
          </div>
        <% } %>
        <form action="/contact" method="POST" id="contact">
          <div class="form-group">
            <input type="text" class="form-control" 
            name="name" placeholder="Name" required>
          </div>
          <div class="form-group">
            <input type="email" class="form-control" 
            name="email" placeholder="Email" required>
          </div>
          <div class="form-group">
            <input type="text" class="form-control"
            name="subject" placeholder="Subject" required>
          </div>
          <div class="form-group">
            <input type="text" class="form-control"
            name="message" placeholder="Message" required>
          </div>
          <button class="btn btn-default btn-lg btn-block" id="btn"><div class="loader"></div>Submit</button>
        </div>
      </div>
    </div>
  </div>
</div>

<% include partials/footer %>