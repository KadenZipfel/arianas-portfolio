<% include partials/header %>

<div class="container">
  <div class="col-md-4 col-md-offset-4 col-xs-10 col-xs-offset-1">
    <h1 style="text-align: center; margin-top: 13rem;">Add New Image</h1>
    <div class="well">
      <form action="/post" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="src" placeholder="Image URL" autocomplete="off" required>
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="description" placeholder="Description" required>
        </div>
        <div class="form-group">
          <select name="page" class="form-control" required>
            <option value="portraits">portraits</option>
            <option value="family">family</option>
            <option value="couples">couples</option>
            <option value="kids">kids</option>
            <option value="babies">babies</option>
          </select>
        </div>
        <div class="form-group">
          <input class="form-control" type="password" name="secret" placeholder="Secret" required>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-success btn-block">Add</button>
        </div>
      </form>
    </div>
  </div>
</div>

<% include partials/footer %>